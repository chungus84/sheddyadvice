
<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 mt-3 background-orange rounded px-4 pb-4">
    <div class="d-flex align-items-center">
        <i class="fa-solid fa-list-ul background-white pe-3"></i>
        <h2 class="my-5 background-white m-0">My lists</h2>
      </div>
      <ul>
        <% @lists.each do |list| %>
          <%= link_to list_path(list) do %>
            <div class="list-card position-relative">
              <div class="left-list">
                <i class="fa-solid fa-list-ul clickable-coral"></i>
                <h3 class="mb-4"><%= list.name %></h3>
                  <%= pluralize(list.posts.count, 'post')%>
                <%# <p><%= link_to "Edit list", edit_list_path(list) %>
              </div>
              <div class="position-absolute list-card-date">
                <p>Created: <%= list.created_at.strftime("%d %B")%></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </ul>
    </div>

    <div class=" col-lg-6 col-md-6 col-sm-12 px-5 mt-3">
      <h2 class="my-5">Create a new list</h2>
      <%= simple_form_for @list do |f| %>
        <%= f.input :name, placeholder: "Enter your list name"%>
        <%= f.submit 'Create list', class: "main-btn mx-auto mt-5" %>
      <% end %>
    </div>


  </div>
</div>
