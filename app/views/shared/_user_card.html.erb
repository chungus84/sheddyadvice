
<div class="container">
  <div class="row">
    <div class="user-card-body col-8">
      <div class="row">
        <div class="col-4">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/random", class: "avatar-bordered", alt: "avatar-bordered" %>
        </div>
        <div class="col-3">
          <span>by <%= @post.user.email %></span>
        </div>
        <div class="col-5 button-list">
          <div class="main-btn">
            <% if @chatroom %>
            <%# link_to button needs styling %>
              <%= link_to "Send User a Message", post_chatroom_path(@post, @chatroom) %>
            <% else %>
             <%= simple_form_for [@post, @new_chatroom] do |f| %>
             <%# need to style simple form button %>
              <%= f.submit "Send User a Message" %>
             <% end %>
            <% end %>
          </div>
          <div class="main-btn" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
              Leave a review
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
